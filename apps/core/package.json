{
  "name": "@sdk5/core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "vite preview",
    "serve:dev": "vite preview --mode development",
    "dev": "vite",
    "build": "vite build --mode",
    "build:debug": "vite build --force --sourcemap --mode development --debug -l info",
    "optimize": "vite optimize",
    "lint": "concurrently -n core/lint:script,core/lint:scss \"npm run lint:script\" \"npm run lint:scss\"",
    "lint:fix": "concurrently -n core/lint:script:fix,core/lint:scss:fix \"npm run lint:script:fix\" \"npm run lint:scss:fix\"",
    "lint:script": "eslint --ext .js,.ts,.vue ./src",
    "lint:script:fix": "eslint --ext .js,.ts,.vue --fix ./src",
    "lint:scss": "stylelint \"**/*.{vue,scss,sass}\"",
    "lint:scss:fix": "stylelint \"**/*.{vue,scss,sass}\" --fix"
  },
  "dependencies": {
    "@sdk5/front-office": "*",
    "@sdk5/shared": "*",
    "@sdk5/ui-kit-entrance": "*",
    "@sdk5/vue-toast": "*",
    "normalize.css": "^8.0.1",
    "vue-resize-directive": "^1.2.0"
  },
  "devDependencies": {
    "@sdk5/eslint-config": "*",
    "@sdk5/stylelint-config": "*",
    "@sdk5/tailwind-config": "*",
    "@sdk5/tsconfig": "*",
    "@vitejs/plugin-legacy": "^5.2.0",
    "@vitejs/plugin-vue2": "^2.3.1",
    "@vue/test-utils": "^1.3.0",
    "react-is": "^16.13.1",
    "terser": "^5.22.0",
    "vite": "^5.0.13",
    "vite-plugin-stylelint": "^5.1.1"
  }
}
